<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Game Series</title>
  </head>
  <body>
    <div class="header">
      <h1>Bowling Tracker</h1>
      <!-- Logout button -->
      <form action="/logout" method="post">
        <button type="submit" class="logout">Logout</button>
      </form>
    </div>
    <div class="container">
      <h1>Game Series</h1>
      <button onclick="location.href='/enter'" class="enter">
        Enter Scores
      </button>

      <ul>
        <% games.forEach((game) => { %>
        <li>
          <% const formattedDate = new
          Date(game.date).toLocaleDateString('en-US', { weekday: 'long', month:
          'long', day: 'numeric', }); %> <%= formattedDate %> - Games: <%=
          game.game1 %>, <%= game.game2 %>, <%= game.game3 %> &nbsp;&nbsp;&nbsp;
          Series: <%= game.total %> &nbsp;&nbsp;&nbsp; Average: <%=
          game.average.toFixed(2) %>
        </li>
        <% }); %>
      </ul>

      <p>Total Scores: <%= totalScores %></p>
    </div>
  </body>
</html>
